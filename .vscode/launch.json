    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rust-gameboy'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rust-gameboy",
                    "--package=rust-gameboy"
                ],
                "filter": {
                    "name": "rust-gameboy",
                    "kind": "bin"
                }
            },
            "args": [ "--rom", "roms/mooneye/manual-only/sprite_priority.gb", "--no-bootrom" ],
            // "args": [ "--rom", "roms/Pokemon - Blue Version (UE) [S][!].gb", "--no-bootrom" ],
            // "args": [ "--rom", "roms/mooneye/emulator-only/mbc1/bits_ramg.gb", "--no-bootrom" ],
            // "args": [ "--rom", "roms/Mario's Picross (UE) [S][!].gb", "--no-bootrom", "--breakpoints", "", "--watchpoints", "" ],

            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rust-gameboy'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rust-gameboy",
                    "--package=rust-gameboy"
                ],
                "filter": {
                    "name": "rust-gameboy",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}